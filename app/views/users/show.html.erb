<div class="profile-main">
  <div class="profile-card">
    <% if @profile.avatar.nil? %>
      <%= image_tag "https://avatars2.githubusercontent.com/u/34108893?v=4", class: 'avatar' %>
    <% else %>
      <%= image_tag @profile.avatar, class: 'avatar'%>
    <% end %>
    <%= @profile.name %>
    <%= @profile.login %>
    <% if current_user.uid == @profile.uid %>
      <% if @profile.bio.nil? %>
        <%= link_to 'Add Bio', '/' %>
      <% else %>
        <%= @profile.bio %>
      <% end %>
    <% else %>
      <%= link_to 'Follow', '/' %>
    <% end %>
  </div>
  <div class="profile-links">
    <%= link_to 'Repositories', '/' %>
      <div class="counter">
        <%= @profile.public_repos %>
      </div>
    <%= link_to 'Stars', '/' %>
    <%= link_to 'Followers', '/' %>
      <div class="counter">
        <%= @profile.followers %>
      </div>
    <%= link_to 'Following', '/' %>
      <div class="counter">
        <%= @profile.following %>
      </div>
  </div>
</div>
